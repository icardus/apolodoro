---
import "@fontsource/inter/variable.css";

import Footer from "~/components/footer.astro";
import Showcase from "~/components/showcase.astro";
import Splash from "~/components/splash.astro";
import "~/styles/index.css";
import CompatibilityList from "~/components/compatibility-list.astro";
import Compatibility from "~/components/compatibility.astro";


const { generator, site } = Astro;
const image = new URL("social.jpg", site);
const description =
  "Freelance front-end web developer based in Barcelona";
---

<!DOCTYPE html>
<html lang="ca" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="max-image-preview:large">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={generator} />
    <title>Banjosites - Desenvolupament i disseny web freelance a Barcelona</title>
    <meta name="description" content={description} />
    <meta property="og:locale" content="ca_ES">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Banjosites">
    <meta property="og:description" content="Freelance web designer and developer based in Barcelona">
    <meta property="og:url" content="https://www.banjosites.com/">
    <link rel="canonical" href="https://www.banjosites.com/">
    <meta name="author" content="Banjosites">
    <meta name="keywords" content="Web design, Frontend web developer, Wordpress, Bootstrap, Astro">
    <meta name="google-site-verification" content="">
  </head>
 
  <body class="h-full overflow-x-hidden bg-zinc-800 text-default text-base selection:bg-zinc-800 selection:text-white"></body>
    <Splash />
    <Showcase />
    <Compatibility />
    </div>
    <Footer />
  </body>
</html>
